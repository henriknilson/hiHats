<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_title"
        android:layout_marginTop="35dp"
        android:text="Ride completed!"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/success_points" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_margin="12dp"
        android:id="@+id/dismiss_button"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/outline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/success_points"
        android:layout_marginTop="36dp"
        android:text="43 Green Points"
        android:textSize="40sp"
        android:textColor="@color/accent"
        android:layout_below="@+id/splash_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="Ride details"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/success_points"
        android:layout_alignStart="@+id/success_points"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="By riding the bus instead of taking"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/success_time"
        android:layout_alignStart="@+id/success_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="the car you have saved 102g CO2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/success_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/success_stops"
        android:text="Lindholmen to Johanneberg"
        android:textSize="18sp"
        android:textColor="@color/accent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/success_time"
        android:text="5,3 km 10 min and 23 sek"
        android:textSize="18sp"
        android:textColor="@color/accent"
        android:layout_below="@+id/success_stops"
        android:layout_alignStart="@+id/success_stops" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="31dp"
        android:text="Thank you"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:text="For making the world a better place!"
        android:textSize="18sp"
        android:textColor="@color/accent"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />
</RelativeLayout>